@model IEnumerable<back_end_ver_1.models.TodoItem>

@{
    ViewBag.Title = "test";
}

<html>
<head>

    <style>
    </style>

</head>
<body>
    <form asp-action="Create" asp-controller="Home" method="post" enctype="multipart/form-data">

        <p>
            <label>Имя</label>
            <input name="Author" class="form-control" />
        </p>
        <p>
            <label>Аватар</label>
            <input name="Image" type="file" multiple="true" class="form-control" />
        </p>
        <p>
            <input type="submit" value="Добавить" />
        </p>
    </form>
    <h3>Все пользователи</h3>
    @foreach (var p in Model)
    {
<div>
    <h4>@p.Name</h4>

    @if (p.Image != null)
    {
        <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(p.Image))" />
    }
    <h4>@p.Author</h4>
</div>
    }
</body>
</html>